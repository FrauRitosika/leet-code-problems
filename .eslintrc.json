{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "space-after-function-name": 0,
        "space-before-function-paren": 0,
        "no-return-assign": 0,
        "semi": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            4
        ]
    },
    "overrides": [
        {
            "files": "*.test.js",
            "plugins": [
                "jest"
            ],
            "rules": {
                "jest/expect-expect": "error"
            }
        }
    ]
}